<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.habithub" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HabitHub</name>
    <description>Comprehensive goal-tracking and personal development application</description>
    <author email="edgarmwila84@gmail.com" href="https://edgar-mwila.web.app">
        Edgar Mwila
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>

